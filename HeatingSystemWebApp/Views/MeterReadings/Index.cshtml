@model IEnumerable<HeatingSystemModel.Model.MeterReading>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kWh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CubeMeters)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsageHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.isEnabled) { 
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kWh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CubeMeters)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsageHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
    }
}
</table>
